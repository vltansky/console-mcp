{
  "name": "console-bridge-extension",
  "version": "0.1.0",
  "type": "module",
  "description": "Browser extension for console log capture",
  "scripts": {
    "build:css": "tailwindcss -i ./src/popup/tailwind.css -o ./public/popup.css --minify",
    "dev:css": "tailwindcss -i ./src/popup/tailwind.css -o ./public/popup.css --watch",
    "build": "npm run build:css && vite build",
    "dev": "vite build --watch",
    "package": "npm run build && node scripts/package.js"
  },
  "dependencies": {
    "console-bridge-shared": "*"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.277",
    "autoprefixer": "^10.4.23",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "typescript": "^5.6.3",
    "vite": "^5.4.11"
  },
  "author": "Vlad Tansky",
  "license": "MIT"
}
